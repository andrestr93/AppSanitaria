<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colormasoscuro"
    android:orientation="vertical"
    tools:context=".Actividades.ActividadPaciente">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewnombre_pac"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorblanco"
        android:text="@string/perfiluser"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/nombre_pacperfil"
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bordes_textview"
        android:text="@string/txtlogin_nombre"
        android:textAlignment="center"
        android:textColor="@color/colornegro"
        android:textSize="18sp" />

    <TextView
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:textColor="@color/colornegro"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@drawable/bordes_textview"
        android:layout_marginTop="50dp"
        android:id="@+id/apellidos_pacperfil"/>


    <TextView
        android:textColor="@color/colornegro"
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@drawable/bordes_textview"
        android:layout_marginTop="50dp"
        android:id="@+id/dni_pacperfil"/>



    <TextView
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:textColor="@color/colornegro"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:background="@drawable/bordes_textview"
        android:id="@+id/numseg_pacperfil"/>


</LinearLayout>