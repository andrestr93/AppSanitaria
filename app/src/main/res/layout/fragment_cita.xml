<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorblanco"
    tools:context=".Fragments.FragmentCita">

    <!-- TODO: Update blank fragment layout -->


    <Spinner
        android:layout_marginTop="50dp"
        android:id="@+id/spinnermedico"
        android:gravity="center"
        android:textAlignment="center"
        android:backgroundTint="@color/colornegro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/texthora"
        android:layout_width="87dp"
        android:layout_marginTop="15dp"

        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"

        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buthora"
        android:text="@string/horacita"
        />



    <TextView
        android:id="@+id/textfecha"
        android:layout_width="86dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:inputType="phone"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butfecha"
        android:text="@string/fechacita"/>


</LinearLayout>
