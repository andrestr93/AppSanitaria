<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorblanco"
    tools:context=".Actividades.ActividadMedico">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewnombre_pac"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/colornegro"
        android:text="@string/perfiluser"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/nombre_mecperfil"
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/txtlogin_nombre"
        android:textAlignment="center"
        android:textColor="@color/colornegro"
        android:textSize="18sp" />

    <TextView
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:textColor="@color/colornegro"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:id="@+id/apellidos_mecperfil"/>


    <TextView
        android:textColor="@color/colornegro"
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:id="@+id/dni_mecperfil"/>

    <TextView
        android:layout_width="327dp"
        android:layout_gravity="center"
        android:textColor="@color/colornegro"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/numcol_mecperfil"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"






/>


</LinearLayout>
